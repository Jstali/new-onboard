# =============================================================================
# NXZEN EMPLOYEE MANAGEMENT SYSTEM - BACKEND ENVIRONMENT EXAMPLE
# =============================================================================
# Copy this file to .env and update the values for your environment
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_NAME=NXZEN Employee Management System
APP_VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
BACKEND_HOST=localhost
BACKEND_PORT=2035
BACKEND_URL=http://localhost:2035
FRONTEND_HOST=localhost
FRONTEND_PORT=2035
FRONTEND_URL=http://localhost:2035

# Production server configuration
PRODUCTION_SERVER_IP=your-server-ip
PRODUCTION_BACKEND_URL=http://your-server-ip:2035
PRODUCTION_FRONTEND_URL=http://your-server-ip:2035

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=onboardd
DB_USER=postgres
DB_PASSWORD=stali

# Production database configuration
PROD_DB_HOST=postgres
PROD_DB_PORT=5432
PROD_DB_NAME=nxzen_hrms_prod
PROD_DB_USER=nxzen_user
PROD_DB_PASSWORD=your_secure_password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Production JWT configuration
PROD_JWT_SECRET=your_production_jwt_secret_key
PROD_JWT_EXPIRES_IN=24h

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:2035,http://127.0.0.1:2035
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Production CORS configuration
PROD_CORS_ORIGIN=http://your-domain.com,https://your-domain.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM_NAME=NXZEN HR System
EMAIL_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# COMPANY CONFIGURATION
# =============================================================================
COMPANY_NAME=Your Company Name
COMPANY_EMAIL=hr@yourdomain.com
COMPANY_PHONE=+1-555-0123
COMPANY_WEBSITE=https://yourdomain.com
COMPANY_ADDRESS=Your Company Address

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_ATTENDANCE_TRACKING=true
ENABLE_LEAVE_MANAGEMENT=true
ENABLE_EXPENSE_MANAGEMENT=true
ENABLE_DOCUMENT_MANAGEMENT=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ENABLE_HTTPS=false
SESSION_TIMEOUT=86400000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CSRF_PROTECTION=true
ENABLE_XSS_PROTECTION=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,png,jpg,jpeg,gif
UPLOAD_PATH=./uploads
DOCUMENTS_PATH=./uploads/documents
EXPENSES_PATH=./uploads/expenses
