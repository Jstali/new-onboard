# =============================================================================
# NXZEN EMPLOYEE MANAGEMENT SYSTEM - FRONTEND ENVIRONMENT EXAMPLE
# =============================================================================
# Copy this file to .env and update the values for your environment
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
REACT_APP_APP_NAME=NXZEN HRMS
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development
REACT_APP_DESCRIPTION=Complete HR Management Solution

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Development API URLs
REACT_APP_DEV_API_URL=http://localhost:2035/api
REACT_APP_DEV_BASE_URL=http://localhost:2036

# Production API URLs
REACT_APP_PROD_API_URL=http://your-server-ip:2035/api
REACT_APP_PROD_BASE_URL=http://your-server-ip:2036

# Default API URL (used if specific environment URL not set)
REACT_APP_API_URL=http://localhost:2035/api
REACT_APP_BASE_URL=http://localhost:2036

# =============================================================================
# COMPANY CONFIGURATION
# =============================================================================
REACT_APP_COMPANY_NAME=Your Company Name
REACT_APP_COMPANY_EMAIL=hr@yourdomain.com
REACT_APP_COMPANY_PHONE=+1-555-0123
REACT_APP_COMPANY_WEBSITE=https://yourdomain.com
REACT_APP_COMPANY_ADDRESS=Your Company Address

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_EMAIL_NOTIFICATIONS=true
REACT_APP_ENABLE_FILE_UPLOADS=true
REACT_APP_ENABLE_ATTENDANCE_TRACKING=true
REACT_APP_ENABLE_LEAVE_MANAGEMENT=true
REACT_APP_ENABLE_EXPENSE_MANAGEMENT=true
REACT_APP_ENABLE_DOCUMENT_MANAGEMENT=true
REACT_APP_ENABLE_HR_DASHBOARD=true
REACT_APP_ENABLE_MANAGER_DASHBOARD=true
REACT_APP_ENABLE_EMPLOYEE_DASHBOARD=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
REACT_APP_ENABLE_HTTPS=false
REACT_APP_SESSION_TIMEOUT=86400000
REACT_APP_ENABLE_CSRF_PROTECTION=true
REACT_APP_ENABLE_XSS_PROTECTION=true

# =============================================================================
# DEBUG CONFIGURATION
# =============================================================================
REACT_APP_DEBUG=false
REACT_APP_VERBOSE_LOGGING=false
REACT_APP_MOCK_DATA=false
REACT_APP_ENABLE_HOT_RELOAD=true

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
REACT_APP_BUILD_TIMESTAMP=
REACT_APP_BUILD_VERSION=1.0.0

# =============================================================================
# THEME CONFIGURATION
# =============================================================================
REACT_APP_DEFAULT_THEME=light
REACT_APP_PRIMARY_COLOR=#3B82F6
REACT_APP_SECONDARY_COLOR=#6B7280
REACT_APP_ACCENT_COLOR=#10B981

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
REACT_APP_API_TIMEOUT=15000
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_CACHE_DURATION=300000
REACT_APP_LAZY_LOADING=true

# =============================================================================
# DEVELOPMENT SERVER CONFIGURATION
# =============================================================================
PORT=2036

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=
REACT_APP_ERROR_REPORTING=true
REACT_APP_PERFORMANCE_MONITORING=true
