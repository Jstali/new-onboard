# =============================================================================
# NXZEN EMPLOYEE MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_IP=0.0.0.0
NODE_ENV=production

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3001
FRONTEND_HOST=frontend

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
BACKEND_PORT=5001
BACKEND_HOST=backend
BACKEND_URL=http://localhost:5001/api

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=onboardd
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3001,http://localhost:5001
FRONTEND_URL=http://localhost:3001

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# These are used by docker-compose.yml for service configuration
COMPOSE_PROJECT_NAME=nxzen
POSTGRES_DB=onboardd
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
